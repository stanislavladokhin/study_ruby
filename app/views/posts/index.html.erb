<h1>List of Posts</h1>
<ul>
	<% @posts.each do |post| %>
		<li>
            <p>
		        <%= link_to post.title, post_path(post) %> created by <%= post.user.try(:login) %>
		    </p>
		    <span>
		        Post has <%= pluralize post.comments.count, 'comment' %>
		    </span>
		</li>
	<% end %>
</ul>

<%= link_to "Create post", new_post_path %>