<h1>List of Posts</h1>
<ul>
	<% @posts.each do |post| %>
		<li>
            <p>
		        <%= link_to post.title, post_path(post) %> created by 
		        <%= if (post.user.try(:login).nil?)
		                "Anonymous"
		            else
		            	post.user.try(:login)
		            end%>
		    </p>
		    <span>
		        Post has <%= pluralize post.comments.count, 'comment' %>
		    </span>
		    <span>
		        <%= link_to "edit post", edit_post_path(post) %>
		    </span>

		    <span>
		        <%= link_to "delete post", post_path(post), method: :delete, confirm: 'Are you sure?' %>
		    </span>
		</li>
	<% end %>
</ul>

<%= link_to "Create post", new_post_path %>