<!DOCTYPE html>
<html>
<head>
  <title>StudyRuby</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= flash[:notice] %>
<% if user_signed_in? %>
<p> Hello,  <%= current_user.full_name %> </p>
<%= link_to 'Signed Out', destroy_user_session_path, method:'delete' %> 
<% else %>
<%= link_to 'Signed In', new_user_session_path %> or <%= link_to 'Signed up', new_user_registration_path %>
<% end %>
<%= yield %>

</body>
</html>
